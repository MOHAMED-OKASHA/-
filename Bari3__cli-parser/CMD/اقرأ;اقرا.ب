int read_i(char *message){
	int var;
	char val [10];
	Serial.println(message);
jmp:	
 if(!Serial.available())
	goto jmp;
	
	byte ch;
	int index =0;
	while(Serial.available()){
	ch=  Serial.read ();
	val[index++] = ch;
	val [index] = '\0';
	delay(10);
	}
 
 
  return var =atoi(val);

}

</ar_initial>

